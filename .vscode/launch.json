{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "DockerComposeRefresh",
            "name": "Logstash Logs",
            "type": "PowerShell",
            "request": "launch",
            "script": "docker",
            "args": [
                "logs",
                "docker-elk_logstash_1",
                "-f"
            ],
            "presentation": {
                "clear": true
            },
            "inputs": [
                {
                    "id": "terminate",
                    "type": "command",
                    "command": "workbench.action.tasks.terminate",
                    "args": "terminateAll"
                }
            ]
        },
        {
            "preLaunchTask": "DockerComposeRefresh",
            "name": "Open Kibana in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5601"
        }
    ]
}